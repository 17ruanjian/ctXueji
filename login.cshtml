<body class="text-center">
    <form action="" method="POST" class="form-signin">
        <img class="mb-4" src="" alt="" width="72" height="72">
        <h1 class="h3 mb-3 font-weight-normal" id="tips">请登录</h1>
        <label for="username" class="sr-only">用户名</label>
        <input type="text" class="form-control" name="username" id="username" placeholder="请输入账户~" required autofocus>
        <label for="password" class="sr-only">密码</label>
        <input type="password" class="form-control" name="password" id="password" placeholder="请输入密码~" required>
        <label for="userType1">教职工</label><input type="radio" name="userType" id="userType" value="1" checked="checked">
        <label for="userType2">学生</label><input type="radio" name="userType" id="userType" value="2">
        <button class="btn btn-lg btn-primary btn-block" type="submit" id="btnSubmit">登录</button>
        <p class="mt-5 mb-3 text-muted">&copy; 2017-2018. </p>
    </form>
