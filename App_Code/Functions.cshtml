    public static string DictionaryToString(Dictionary<int, int> value)
    {
        string str = "";
        int temp = value.Count;
        if (temp == 0)
        {
            return str;
        }
        int p = 1;
        foreach (var i in value)
        {
            if (p == 1)
            {
                str = str + i.Key + "=" + i.Value;
            }
            else
            {
                str = str + "|" + i.Key + "=" + i.Value;
            }
            p++;
        }
        return str;
