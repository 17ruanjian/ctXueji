<body>
    <header>
      <!-- Fixed navbar -->
      <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <a class="navbar-brand" href="#">校务管理系统</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
          <ul class="navbar-nav mr-auto">
          @if (Convert.ToInt16(Session["authority"]) == 3 || Convert.ToInt16(Session["authority"]) == 2)
          {
            <li class="nav-item">
              <a class="nav-link" href="~/students.cshtml">学生</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="~/classes.cshtml">班级</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="~/teachers.cshtml">教师</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="~/majors.cshtml">专业</a>
            </li>
          }
          @if (Convert.ToInt16(Session["authority"]) == 2)
          {
            <li class="nav-item">
              <a class="nav-link" href="~/courses.cshtml">课程</a>
            </li>
          }
            <li class="nav-item">
              <a class="nav-link" href="~/courses_list.cshtml">成绩</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="~/rollcall_add.cshtml">点名</a>
            </li>

          </ul>
          <div class="justify-content-end">
            <ul class="navbar-nav mr-auto">
                    @if (Session["name"] == null)
                    {
                      <li class="nav-item">
                    <a class="nav-link" href="~/login.cshtml">登陆</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" href="~/log_confirm.cshtml">注册</a>
                    </li>
                    }
                    else
                    {<li class="nav-item">
                    <a class="nav-link" href="#">@Session["name"]</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" href="~/logout.cshtml">登出</a>
                    </li>
                    }
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <!-- Begin page content -->
    <main role="main" class="container">
      @RenderBody()
    </main>

    <footer class="footer">
      <div class="container">
        <span class="text-muted">2017-2018. By 学生：江崟才 董权德 苏子豪 刘婉玥 </span>
