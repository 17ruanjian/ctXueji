<!DOCTYPE html>
<html lang="zh-hans">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0,minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" href="~/content/bootstrap.min.css">
    <link rel="stylesheet" href="~/content/style.css">
    <link rel="stylesheet" type="text/css" href="~/content/jquery.dataTables.css">
    <script src="~/scripts/jquery-3.3.1.min.js"></script>
    <script src="~/scripts/bootstrap.min.js"></script>
    <script type="text/javascript" charset="utf8" src="~/scripts/jquery.dataTables.js"></script>
    <script>
        $(document).ready(function () {
            $('#table_id').DataTable();
        });
    </script>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggle" data-toggle="collapse" data-target="#responsive-navbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="#" class="navbar-brand"><strong>Hello</strong>.net</a>
            </div>
            <div class="collapse navbar-collapse" id="responsive-navbar">
                <ul class="nav navbar-nav">

                    @if (Convert.ToInt16(Session["authority"]) == 2 || Convert.ToInt16(Session["authority"]) == 3)
                    {
                        <li><a href="~/students.cshtml">学生</a></li>
                        <li><a href="~/classes.cshtml">班级</a></li>
			<li><a href="~/majors.cshtml">专业</a></li>
                        <li><a href="~/teachers.cshtml">教师</a></li>
                        <li><a href="~/courses.cshtml">课程</a></li>
                    }
                    @if (Convert.ToInt16(Session["authority"]) == 3)
                    {
                        <li><a href="~/teachers.cshtml">教师</a></li>
                        <li><a href="~/majors.cshtml">专业</a></li>
                    }
                    <li><a href="~/courses_list.cshtml">成绩</a></li>
                    <li><a href="~/rollcall_add.cshtml">点名</a></li>
                </ul>
                <div class="profile navbar-right">
                    @if (Session["name"] == null)
                    {
                        <ul class="nav navbar-nav">
                            <li><a href="~/login.cshtml">登陆</a></li>
                            <li><a href="~/log_confirm.cshtml">注册</a></li>
                        </ul>
                    }
                    else
                    {

                        <ul class="nav navbar-nav">
                            <li><p class="navbar-text">您好，<a class="navbar-link">@Session["name"]</a></p></li>
                            <li><a href="~/logout.cshtml">登出</a></li>
                        </ul>
                    }
                </div>
            </div>
        </div>
    </nav>
    <div class="container col-sm-12">
        @RenderBody()
    </div>
</body>
</html>